%html

  %head
    %meta{:charset => "utf-8"}/
    %title Responsible Coders Manifesto
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    /[if lt IE 9]
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = tag(:meta, property: "og:title", content: "Manifesto for Responsible Software Development")
    = tag(:meta, property: "og:description", content: "The Manifesto for Responsible Software Development is a declaration of values written by software developers who are tired of people who abuse their knowledge to harm others.")
    = tag("meta", property: "twitter:creator", content: "@NilsLoewe")
    <script src='https://www.google.com/recaptcha/api.js'></script>


  %body
    /[if lt IE 8]
      %p.browserupgrade
        You are using an outdated browser. Please
        %a{:href => "http://browsehappy.com/"} upgrade your browser
        to improve your experience.
    #preloader
      #load Â 
    .wrapper
      #home
        = yield
      = render 'layouts/footer'
    = piwik_tracking_tag
