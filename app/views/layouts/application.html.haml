!!!
%html

  %head
    %meta{:charset => "utf-8"}/
    %title Responsible Coders Manifesto
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    /[if lt IE 9]
    %script{ src: "http://html5shim.googlecode.com/svn/trunk/html5.js"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = tag(:meta, property: "og:title", content: "Manifesto for Responsible Software Development")
    = tag(:meta, property: "og:description", content: "The Manifesto for Responsible Software Development is a declaration of values written by software developers who are tired of people who abuse their knowledge to harm others.")
    = tag("meta", property: "twitter:creator", content: "@NilsLoewe")

  %body

    .container-fluid
      = yield
    %footer.footer
      .container-fluid
        .row
          .col-md-10.col-md-offset-1.text-center
            &copy 2015, Friederike &amp; Nils L&ouml;we and many of the first signees.
            This declaration may be freely copied in any form, but only in its entirety through this notice.
          .col-md-1.text-right
            =link_to 'Tweet', 'https://twitter.com/share', class: "twitter-share-button", :data => { :url => "http://manifesto.responsiblesoftware.org", :text => 'Do you take responsibility for your work as a software developer?', :hashtags => "responsibility, manifesto" }
            :javascript
              window.twttr=(function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],t=window.twttr||{};if(d.getElementById(id))return t;js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);t._e=[];t.ready=function(f){t._e.push(f);};return t;}(document,"script","twitter-wjs"));

    = piwik_tracking_tag
